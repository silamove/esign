{
  "name": "pdf-signature-workspace",
  "version": "1.0.0",
  "description": "Full-stack PDF signing application workspace",
  "private": true,
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend-new && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend-new && npm run preview",
    "build:backend": "cd backend && echo 'Backend built'",
    "build:frontend": "cd frontend-new && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend-new && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend-new && npm test",
    "test": "npm run test:backend && npm run test:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend-new && npm run lint",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "seed": "cd backend && npm run seed",
    "db:seed": "npm run seed"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "pdf",
    "signature",
    "document",
    "signing",
    "electronic-signature",
    "workspace"
  ],
  "author": "Your Name",
  "license": "MIT"
}
