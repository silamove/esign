{
  "name": "pdf-signature-app",
  "version": "1.0.0",
  "description": "Full-stack PDF signing application",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend-new && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend-new && npm run build",
    "build": "npm run build:frontend",
    "test": "jest",
    "lint": "eslint backend frontend/src",
    "install:all": "npm install && cd frontend && npm install",
    "seed": "node backend/seeders/seed-users.js",
    "db:seed": "npm run seed"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "slugify": "^1.6.6",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "eslint": "^9.17.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.8",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "pdf",
    "signature",
    "document",
    "signing",
    "electronic-signature"
  ],
  "author": "Your Name",
  "license": "MIT"
}
